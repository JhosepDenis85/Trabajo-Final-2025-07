{
  "info": {
    "name": "PASARELA - Pago",
    "_postman_id": "pasarela-pago",
    "description": "Procesa pago con Stripe (PaymentIntent + confirmaci√≥n demo).",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    { "key": "baseUrl", "value": "http://localhost:6969" },
    { "key": "userId", "value": "" },
    { "key": "token", "value": "" },
    { "key": "orderDraftId", "value": "" },
    { "key": "totalPagar", "value": "" }
  ],
  "item": [
    {
      "name": "GET Carrito (Obtener Draft y Total)",
      "request": {
        "method": "GET",
        "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
        "url": "{{baseUrl}}/api/pasarela/{{userId}}/carrito"
      },
      "event": [
        {
          "listen": "test",
          "script": { "exec": [
            "const r=pm.response.json();",
            "if(r.orderDraftId){ pm.collectionVariables.set('orderDraftId', r.orderDraftId); }",
            "if(r.totalPagar){ pm.collectionVariables.set('totalPagar', r.totalPagar); }"
          ] }
        }
      ]
    },
    {
      "name": "POST Procesar Pago",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token}}" },
          { "key": "Content-Type", "value": "application/json" }
        ],
        "url": "{{baseUrl}}/api/pasarela/{{userId}}/pago",
        "body": { "mode": "raw", "raw": "{\n  \"orderDraftId\": \"{{orderDraftId}}\",\n  \"monto\": {{totalPagar}},\n  \"metodoPago\": \"TARJETA\"\n}" }
      }
    }
  ]
}