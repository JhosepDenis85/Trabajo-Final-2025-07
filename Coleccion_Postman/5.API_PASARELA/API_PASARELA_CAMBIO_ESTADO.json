{
  "info": {
    "name": "PASARELA - Cambio Estado",
    "_postman_id": "pasarela-cambio-estado",
    "description": "Confirma resultado del pago y genera pedido final.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    { "key": "baseUrl", "value": "http://localhost:6969" },
    { "key": "userId", "value": "" },
    { "key": "token", "value": "" },
    { "key": "orderDraftId", "value": "" },
    { "key": "transaccionId", "value": "" }
  ],
  "item": [
    {
      "name": "GET Carrito (Asegurar Draft)",
      "request": {
        "method": "GET",
        "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
        "url": "{{baseUrl}}/api/pasarela/{{userId}}/carrito"
      }
    },
    {
      "name": "POST Pago (Obtener transacci√≥n)",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token}}" },
          { "key": "Content-Type", "value": "application/json" }
        ],
        "url": "{{baseUrl}}/api/pasarela/{{userId}}/pago",
        "body": { "mode": "raw", "raw": "{\n  \"orderDraftId\": \"{{orderDraftId}}\",\n  \"monto\": 0,\n  \"metodoPago\": \"TARJETA\"\n}" }
      },
      "event": [
        {
          "listen": "test",
            "script": { "exec": [
            "const r=pm.response.json();",
            "if(r.transaccionId){ pm.collectionVariables.set('transaccionId', r.transaccionId); }"
          ] }
        }
      ]
    },
    {
      "name": "POST Cambiar Estado a PAGADO",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token}}" },
          { "key": "Content-Type", "value": "application/json" }
        ],
        "url": "{{baseUrl}}/api/pasarela/{{userId}}/estado",
        "body": { "mode": "raw", "raw": "{\n  \"orderDraftId\": \"{{orderDraftId}}\",\n  \"nuevoEstado\": \"PAGADO\",\n  \"transaccionId\": \"{{transaccionId}}\"\n}" }
      }
    },
    {
      "name": "POST Cambiar Estado a RECHAZADO",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token}}" },
          { "key": "Content-Type", "value": "application/json" }
        ],
        "url": "{{baseUrl}}/api/pasarela/{{userId}}/estado",
        "body": { "mode": "raw", "raw": "{\n  \"orderDraftId\": \"{{orderDraftId}}\",\n  \"nuevoEstado\": \"RECHAZADO\"\n}" }
      }
    },
    {
      "name": "POST Cambiar Estado a ERROR_PASARELA",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token}}" },
          { "key": "Content-Type", "value": "application/json" }
        ],
        "url": "{{baseUrl}}/api/pasarela/{{userId}}/estado",
        "body": { "mode": "raw", "raw": "{\n  \"orderDraftId\": \"{{orderDraftId}}\",\n  \"nuevoEstado\": \"ERROR_PASARELA\"\n}" }
      }
    }
  ]
}