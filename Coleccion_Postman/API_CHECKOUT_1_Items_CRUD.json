{
  "info": { "name": "CHECKOUT - Items (CRUD)", "_postman_id": "checkout-items", "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json" },
  "variable": [
    { "key": "baseUrl", "value": "http://localhost:6969" },
    { "key": "userId", "value": "" },
    { "key": "token", "value": "" },
    { "key": "itemId", "value": "" },
    { "key": "productId", "value": "" }
  ],
  "item": [
    {
      "name": "GET Items del carrito",
      "request": {
        "method": "GET",
        "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
        "url": "{{baseUrl}}/api/checkout/{{userId}}/items"
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "const json = pm.response.json();",
              "if (json.items && json.items[0]) pm.collectionVariables.set('itemId', json.items[0]._id);"
            ]
          }
        }
      ]
    },
    {
      "name": "POST Agregar/Actualizar item por productoId",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token}}" },
          { "key": "Content-Type", "value": "application/json" }
        ],
        "url": "{{baseUrl}}/api/checkout/{{userId}}/items",
        "body": { "mode": "raw", "raw": "{\n  \"productId\": \"{{productId}}\",\n  \"quantity\": 2\n}" }
      }
    },
    {
      "name": "PUT Cambiar cantidad (mismo endpoint POST)",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token}}" },
          { "key": "Content-Type", "value": "application/json" }
        ],
        "url": "{{baseUrl}}/api/checkout/{{userId}}/items",
        "body": { "mode": "raw", "raw": "{\n  \"productId\": \"{{productId}}\",\n  \"quantity\": 5\n}" }
      }
    },
    {
      "name": "DELETE Eliminar item",
      "request": {
        "method": "DELETE",
        "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
        "url": "{{baseUrl}}/api/checkout/{{userId}}/items/{{itemId}}"
      }
    }
  ]
}