{
  "info": { "name": "CHECKOUT - Validación de Cupones (CRUD)", "_postman_id": "checkout-coupons", "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json" },
  "variable": [
    { "key": "baseUrl", "value": "http://localhost:6969" },
    { "key": "userId", "value": "" },
    { "key": "token", "value": "" },
    { "key": "couponCode", "value": "NOV-2025-001" }
  ],
  "item": [
    {
      "name": "POST Aplicar cupón",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token}}" },
          { "key": "Content-Type", "value": "application/json" }
        ],
        "url": "{{baseUrl}}/api/checkout/{{userId}}/validate-coupon",
        "body": { "mode": "raw", "raw": "{\n  \"code\": \"{{couponCode}}\"\n}" }
      }
    },
    {
      "name": "GET Items (ver descuento aplicado)",
      "request": {
        "method": "GET",
        "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
        "url": "{{baseUrl}}/api/checkout/{{userId}}/items"
      }
    },
    {
      "name": "PUT Cambiar a recojo en tienda",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token}}" },
          { "key": "Content-Type", "value": "application/json" }
        ],
        "url": "{{baseUrl}}/api/checkout/{{userId}}/delivery",
        "body": { "mode": "raw", "raw": "{\n  \"type\": \"pickup\"\n}" }
      }
    },
    {
      "name": "DELETE Eliminar primer item (opcional)",
      "request": {
        "method": "DELETE",
        "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
        "url": "{{baseUrl}}/api/checkout/{{userId}}/items/{{itemId}}"
      }
    }
  ]
}