{
  "info": {
    "name": "HOME - Cupones",
    "_postman_id": "home-coupons",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    { "key": "baseUrl", "value": "http://localhost:6969" },
    { "key": "token", "value": "" },
    { "key": "couponId", "value": "" },
    { "key": "couponCode", "value": "NOV-2025-001" }
  ],
  "item": [
    {
      "name": "Crear cupón 10% (ADMIN)",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token}}" },
          { "key": "Content-Type", "value": "application/json" }
        ],
        "url": "{{baseUrl}}/api/home/coupons",
        "body": {
          "mode": "raw",
            "raw": "{\n  \"code\": \"NOV-2025-001\",\n  \"description\": \"Descuento noviembre\",\n  \"type\": \"percent\",\n  \"value\": 10,\n  \"minSubtotal\": 20,\n  \"active\": true\n}"
        }
      }
    },
    {
      "name": "Validar cupón NOV-2025-001",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "url": "{{baseUrl}}/api/home/coupons/validate",
        "body": {
          "mode": "raw",
          "raw": "{\n  \"code\": \"NOV-2025-001\",\n  \"subtotal\": 23.90\n}"
        }
      }
    },
    {
      "name": "Listar cupones (público)",
      "request": {
        "method": "GET",
        "url": "{{baseUrl}}/api/home/coupons?active=true"
      }
    },
    {
      "name": "Obtener cupón por código (público)",
      "request": {
        "method": "GET",
        "url": "{{baseUrl}}/api/home/coupons/{{couponCode}}"
      }
    },
    {
      "name": "Actualizar cupón (ADMIN)",
      "request": {
        "method": "PUT",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token}}" },
          { "key": "Content-Type", "value": "application/json" }
        ],
        "url": "{{baseUrl}}/api/home/coupons/{{couponId}}",
        "body": {
          "mode": "raw",
          "raw": "{\n  \"description\": \"Descuento noviembre extendido\",\n  \"active\": true,\n  \"value\": 12\n}"
        }
      }
    },
    {
      "name": "Eliminar cupón (ADMIN)",
      "request": {
        "method": "DELETE",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "url": "{{baseUrl}}/api/home/coupons/{{couponId}}"
      }
    }
  ]
}