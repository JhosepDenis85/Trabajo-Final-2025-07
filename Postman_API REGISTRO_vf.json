{
  "info": {
    "name": "TF Alcance 1 - Registro & Auth",
    "_postman_id": "7c9d5a3b-0a3e-4d9d-8d74-aaaa0000c001",
    "description": "APIs Registro/Login local y Google OAuth con roles.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    { "key": "baseUrl", "value": "http://localhost:6969" },
    { "key": "frontend", "value": "http://localhost:3000" },
    { "key": "token", "value": "" }
  ],
  "item": [
    {
      "name": "Signup - Registro (User/Pass)",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "url": "{{baseUrl}}/api/auth/signup",
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"Roberta\",\n  \"username\": \"roberta\",\n  \"email\": \"roberta@gmail.com\",\n  \"password\": \"Secret12\",\n  \"roles\": [\"user\"]\n}"
        }
      }
    },
    {
      "name": "Validate - Disponibilidad email/username",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "url": "{{baseUrl}}/api/auth/validate",
        "body": { "mode": "raw", "raw": "{ \"email\": \"roberta@gmail.com\" }" }
      }
    },
    {
      "name": "Signin - Login (User/Pass)",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "let json = pm.response.json();",
              "if (json?.data?.token) pm.collectionVariables.set('token', json.data.token);"
            ],
            "type": "text/javascript"
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "url": "{{baseUrl}}/api/auth/signin",
        "body": { "mode": "raw", "raw": "{ \"email\": \"roberta@gmail.com\", \"password\": \"Secret12\" }" }
      }
    },
    {
      "name": "Profile (JWT)",
      "request": {
        "method": "GET",
        "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
        "url": "{{baseUrl}}/api/auth/profile"
      }
    },
    {
      "name": "Login OAuth (abre navegador)",
      "request": { "method": "GET", "url": "{{baseUrl}}/api/auth/google" },
      "description": "Completar el login en Google; el backend redirige a {{frontend}}/auth/success?token=..."
    }
  ]
}