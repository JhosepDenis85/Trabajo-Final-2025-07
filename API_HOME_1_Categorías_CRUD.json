{
  "info": {
    "name": "HOME - Categorias",
    "_postman_id": "home-cats",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    { "key": "baseUrl", "value": "http://localhost:6969" },
    { "key": "token", "value": "" },
    { "key": "categoryId", "value": "" }
  ],
  "item": [
    {
      "name": "Listar categorías",
      "request": {
        "method": "GET",
        "url": "{{baseUrl}}/api/home/categories"
      }
    },
    {
      "name": "Crear categorías (bulk, ADMIN)",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token}}" },
          { "key": "Content-Type", "value": "application/json" }
        ],
        "url": "{{baseUrl}}/api/home/categories/bulk",
        "body": {
          "mode": "raw",
          "raw": "[{\"name\":\"Abarrotes\"},{\"name\":\"Bebidas Alcohólicas\"},{\"name\":\"Bebidas No Alcohólicas\"},{\"name\":\"Carnes\"},{\"name\":\"Cuidado Personal\"},{\"name\":\"Embutidos\"},{\"name\":\"Frutas y Verduras\"},{\"name\":\"Lácteos y Derivados\"},{\"name\":\"Limpieza del Hogar\"},{\"name\":\"Mascotas\"},{\"name\":\"Snacks\"}]"
        }
      }
    },
    {
      "name": "Actualizar categoría (ADMIN)",
      "request": {
        "method": "PUT",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token}}" },
          { "key": "Content-Type", "value": "application/json" }
        ],
        "url": "{{baseUrl}}/api/home/categories/{{categoryId}}",
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"Abarrotes y Pastas\",\n  \"active\": true\n}"
        }
      }
    },
    {
      "name": "Eliminar categoría (ADMIN)",
      "request": {
        "method": "DELETE",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "url": "{{baseUrl}}/api/home/categories/{{categoryId}}"
      }
    }
  ]
}