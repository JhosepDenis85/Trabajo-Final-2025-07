{
  "info": { "name": "CHECKOUT - Resumen y Entrega (CRUD)", "_postman_id": "checkout-summary", "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json" },
  "variable": [
    { "key": "baseUrl", "value": "http://localhost:6969" },
    { "key": "userId", "value": "" },
    { "key": "token", "value": "" }
  ],
  "item": [
    {
      "name": "POST Seleccionar delivery",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token}}" },
          { "key": "Content-Type", "value": "application/json" }
        ],
        "url": "{{baseUrl}}/api/checkout/{{userId}}/delivery",
        "body": { "mode": "raw", "raw": "{\n  \"type\": \"delivery\",\n  \"address\": \"Av. Siempre Viva 742\",\n  \"schedule\": \"HOY 18:00-20:00\"\n}" }
      }
    },
    {
      "name": "GET Métodos de pago",
      "request": { "method": "GET", "url": "{{baseUrl}}/api/payment-methods" }
    },
    {
      "name": "POST Seleccionar método de pago",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token}}" },
          { "key": "Content-Type", "value": "application/json" }
        ],
        "url": "{{baseUrl}}/api/checkout/{{userId}}/payment",
        "body": { "mode": "raw", "raw": "{\n  \"method\": \"card\"\n}" }
      }
    },
    {
      "name": "GET Resumen final",
      "request": {
        "method": "GET",
        "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
        "url": "{{baseUrl}}/api/checkout/{{userId}}/summary"
      }
    }
  ]
}